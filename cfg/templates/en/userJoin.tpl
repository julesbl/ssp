<!-- userJoin.tpl - user joinup template -->
<h1>Join SSP</h1>
<form action="{formAction}" method="post">
	{errorList}
	<table>
		<tr>
			<td>
				{firstNameDesc}
			</td>
			<td>
				{firstName}
			</td>
		</tr>
		<tr>
			<td>
				{lastNameDesc}
			</td>
			<td>
				{lastName}
			</td>
		</tr>
		<tr>
			<td>
				{emailDesc}
			</td>
			<td>
				{email}
			</td>
		</tr>
		{:if:name}
		<tr>
			<td>
				{nameDesc}
			</td>
			<td>
				{name}
			</td>
		</tr>
		{:endif:name}
		{:if:password}
		<tr>
			<td>
				{passwordDesc}
			</td>
			<td>
				{password}
			</td>
		</tr>
		<tr>
			<td>
				{password2Desc}
			</td>
			<td>
				{password2}
			</td>
		</tr>
		{:endif:password}
		{:if:signUpLevel}
		<tr>
			<td>
				{signUpLevelDesc}
			</td>
			<td>
				{signUpLevel}
			</td>
		</tr>
		{:endif:signUpLevel}
		<tr>
			<td>
				{tandcsDesc}
			</td>
			<td>
				{tandcs}
			</td>
		</tr>
		<tr>
			<td>
				{privacy_policyDesc}
			</td>
			<td>
				{privacy_policy}
			</td>
		</tr>
		<tr>
			<td>
				{contact_themDesc}
			</td>
			<td>
				{contact_them}
			</td>
		</tr>
		<tr>
			<td>
				&nbsp;
			</td>
			<td>
				<input type="submit" value="Join" />
			</td>
		</tr>
	</table>
	{formHidden}
</form>
<p><a href="{loginPath}">Return to login</a></p>